<!DOCTYPE html>
<html>
	<head>
		<title>Loja</title>
		<%= stylesheet_link_tag    "application" %>
		<%= javascript_include_tag "application" %>
		<%= csrf_meta_tags %>
	</head>
	<body>
		<div class="container">
			<% [:success, :waring, :error, :info].each do |key| %>

				<% unless flash[key].blank? %>
				<div class="alert-message <%= key %> ">
					<a class="close" href="#">Ã—</a>
					<p>
						<%= flash[key]%>
					</p>
				</div>
				<%end%>
			
			<% end %>
			<%= yield %>
		</div>
	</body>
</html>
